<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>


    <style name="activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
    </style>

    <!--mainlayout里RadioGroup-->
    <style name="mainradiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#D8D8D8</item>
        <item name="android:textSize">23px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">6px</item>
    </style>

    <!--login登入页面-->
    <style name="login_edittext">
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35px</item>
        <item name="android:layout_marginRight">35px</item>
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:drawablePadding">20px</item>
    </style>

    <!--主页顶部栏-->
    <style name="top_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">27px</item>
        <item name="android:textColor">@color/write</item>
    </style>

    <!--signin页面text-->
    <style name="signin_text">
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">55px</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/write</item>
    </style>

    <!--       <item name="android:background">@drawable/login_button_edit</item>-->
    <style name="sigin_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/editview_sr_bg_shape</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginLeft">55px</item>
        <item name="android:layout_marginRight">55px</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="login_Checkbox_Theme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!--fundsatmmoney里面Text——输入主题-->
    <style name="funds_ATM_Money_textid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">25px</item>
    </style>

    <!--fundsatmmoney里面Text——提示主题-->
    <style name="funds_ATM_Money">
        <item name="android:layout_width">185px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textSize">26px</item>
    </style>

    <!--fundsatmmoney里面Linear父布局主题-->
    <style name="funds_ATM_Money_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
        <item name="android:paddingLeft">16px</item>
        <item name="android:paddingRight">16px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--公司、支付宝入款Linear父布局主题 -->
    <style name="alipay_hk_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:paddingLeft">16px</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--fundsdeal裏面的radiobutton-->
    <style name="funds_deal_Radiobutton">
        <item name="android:background">@drawable/funds_deal_radiobutton_selector</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--lineconversion 里的text水平栏-->
    <style name="lineconversion_linear_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75px</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/lineconversion_linear_text</item>
        <item name="android:drawablePadding">15px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:padding">8px</item>
        <item name="android:textSize">33px</item>
    </style>

    <!--lineconversion 里的button-->
    <style name="lineconversion_linear_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_button_lucency_selector</item>
        <item name="android:textColor">@color/button_green</item>
        <item name="android:textSize">25px</item>
    </style>

    <!--personalaccount页面linear-->
    <style name="personalaccount_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:background">@drawable/editview_sr_bg_shape</item>
        <item name="android:layout_marginLeft">55px</item>
        <item name="android:layout_marginRight">55px</item>
        <item name="android:layout_marginBottom">30px</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--personalaccount页面edit-->
    <style name="personalaccount_edittext">
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginLeft">35px</item>
        <item name="android:layout_marginRight">35px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:drawablePadding">20px</item>
    </style>

    <!--lineconversion 里的text水平栏-->
    <style name="personalaccount_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75px</item>
        <item name="android:layout_margin">3px</item>
        <item name="android:background">@drawable/lineconversion_linear_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:drawablePadding">15px</item>
        <item name="android:padding">8px</item>
        <item name="android:textSize">30px</item>
    </style>


    <style name="funds_cath_deal_item_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">64px</item>
        <item name="android:padding">10px</item>

    </style>

    <!--account_bind里editview-->
    <style name="account_bind_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">14px</item>
        <item name="android:layout_marginTop">14px</item>
        <item name="android:background">@drawable/funds_deal_shape_text</item>
        <item name="android:paddingLeft">25px</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">25px</item>
        <item name="android:textColorHint">@color/button_green</item>
    </style>

    <!--账户绑定要求提示-->
    <style name="account_bind_TS_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">23px</item>
    </style>

    <style name="funds_line_select_button">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/funds_deal_shape_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="alipay_hk_button">
        <item name="android:textColor">@color/write</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/funds_deal_shape_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="alipay_hk_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/funds_deal_shape_text</item>
        <item name="android:paddingLeft">25px</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--左侧出来的popuwindow-->
    <style name="AnimationLeftFade">
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>
    </style>

    <style name="Transparent">
        　　
        <item name="android:background">@android:color/black</item>
        　　
        <item name="android:windowBackground">@color/transparent</item>
        　　
        　　
        <item name="android:windowIsTranslucent">true</item>
        　　
        <!--　　<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->
        　　
        　　
    </style>
</resources>
