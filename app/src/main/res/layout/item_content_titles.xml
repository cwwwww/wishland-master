<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_content_arrows1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription=""
            android:src="@drawable/arrows_selector"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/item_content_arrows2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription=""
            android:src="@drawable/arrows_selector"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/item_content_arrows3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription=""
            android:src="@drawable/arrows_selector"
            android:visibility="invisible" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_popup_bg"
        android:orientation="vertical"></android.support.v7.widget.RecyclerView>

</LinearLayout>
