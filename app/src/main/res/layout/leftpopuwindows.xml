<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="#e0808080"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--android:background="@drawable/app_background"-->

    <LinearLayout
        android:id="@+id/person_seting"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/app_background"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--<com.panghaha.it.leftpopuwindowsdemo.CircleImageView-->
        <!--android:clickable="true"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:id="@+id/leftphoto"-->
        <!--android:layout_width="88dp"-->
        <!--android:layout_height="88dp"-->
        <!--/>-->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/icon1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/leftname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/unlogin"
            android:textColor="@color/write"
            android:textSize="15sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />
    <!--?android:attr/selectableItemBackground-水波纹效果-->


    <LinearLayout
        android:id="@+id/shenqing"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/shenqing_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/account_Data"
            android:textColor="@color/write"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#33000000" />

    <LinearLayout
        android:id="@+id/shenpi"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/shenpi_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/qiandao"
            android:textColor="@color/write"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#33000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/gongxiangwj"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/gongxiangwj_red"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="菜单3"
            android:textColor="@color/blank"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#33000000"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/exitRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/exit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/funds_selector_button"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/exit"
                android:textColor="@color/blank"
                android:textSize="16sp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>