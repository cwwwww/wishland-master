<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10px"
    android:fitsSystemWindows="true"
    android:layout_marginTop="10px"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/alipay_frame_image"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:adjustViewBounds="true"
        android:padding="10px"
        android:scaleType="fitXY"
        android:visibility="gone"
        tools:src="@drawable/viewsbj" />

    <LinearLayout
        android:id="@+id/alipay_frame_text"
        style="@style/funds_cath_deal_item_list">

        <TextView
            style="@style/funds_ATM_Money"
            android:text="姓名：" />

        <TextView
            android:id="@+id/at_username"
            style="@style/funds_ATM_Money_textid" />

    </LinearLayout>

    <LinearLayout style="@style/funds_cath_deal_item_list">

        <TextView
            style="@style/funds_ATM_Money"
            android:text="名称：" />

        <TextView
            android:id="@+id/at_name"
            style="@style/funds_ATM_Money_textid" />

    </LinearLayout>

    <LinearLayout style="@style/funds_cath_deal_item_list">

        <TextView
            style="@style/funds_ATM_Money"
            android:text="账号：" />

        <TextView
            android:id="@+id/at_user"
            style="@style/funds_ATM_Money_textid" />
    </LinearLayout>

    <LinearLayout style="@style/funds_cath_deal_item_list">

        <TextView
            style="@style/funds_ATM_Money"
            android:text="说明：" />

        <TextView
            android:id="@+id/ti_state"
            style="@style/funds_ATM_Money_textid" />

    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>