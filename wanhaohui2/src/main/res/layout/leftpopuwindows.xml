<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@drawable/silde_view_center"
    android:orientation="vertical">

    <!--android:background="@drawable/app_background"-->

    <RelativeLayout
        android:id="@+id/person_seting"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/silde_view_top"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_popup_vip"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@mipmap/vip_0" />

            <TextView
                android:id="@+id/leftname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="XiaoBing"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />
    <!--?android:attr/selectableItemBackground-水波纹效果-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/shenqing"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/shenqing_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/silde_icon1"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="热门优惠"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/shenpi"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/shenpi_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/silde_icon2"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="下载客户端"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#33000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/gongxiangwj"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/gongxiangwj_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/silde_icon3"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="常见问题"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#33000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/iv_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/silde_icon4"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="关于我们"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#33000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/iv_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coutecnt_us"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="联系我们"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#33000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/select_silde_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/iv_clean_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clean_cache"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="清除缓存"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/exitRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/exit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@color/text_color1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="退出登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>