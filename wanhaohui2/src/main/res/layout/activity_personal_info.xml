<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="真实姓名" />

                <EditText
                    android:id="@+id/personalaccount_user_SR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="真实姓名，必须与取款银行卡姓名一致"
                    android:maxEms="8"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="手机号码" />

                <EditText
                    android:id="@+id/tv_account_phoneNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="选填"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:text=">"
                    android:textColor="@color/text_color2" />
            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="电子邮箱" />

                <EditText
                    android:id="@+id/tv_tv_account_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="选填"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="20px"-->
                <!--android:gravity="right"-->
                <!--android:text=">"-->
                <!--android:textColor="@color/text_color2" />-->
            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="微信" />

                <EditText
                    android:id="@+id/tv_account_wecat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="选填"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="QQ" />

                <EditText
                    android:id="@+id/tv_account_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="选填"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="地址" />

                <EditText
                    android:id="@+id/tv_account_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="选填"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView style="@style/personal_text_hint" />

            <LinearLayout
                android:id="@+id/ll_account_change_psw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/personal_text1"
                    android:text="更改密码" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text=">"
                    android:textColor="@color/text_color2" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="银行卡资料"
                android:textColor="@color/text_color1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/rl_bank_info_nothing"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px">

                    <ImageView
                        android:id="@+id/iv_no_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_bind_car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_no_bank"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:text="点击添加您的银行卡"
                        android:textColor="@color/text_color2"
                        android:textSize="16sp" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/rl_bank_info"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@drawable/bank_card1"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/iv_back_logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icbc_logo"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_back_logo"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_jiejika"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_bank_name"
                        android:layout_marginLeft="50dp"
                        android:text="借记卡"
                        android:textColor="@color/text_color4" />

                    <RelativeLayout
                        android:id="@+id/rl_bank_change"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_change_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="更换"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@id/tv_change_bank"
                            android:background="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_bank_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jiejika"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_bank_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_bank_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_bank_num"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <com.wishland.www.wanhaohui2.view.customlayout.EmptyLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>