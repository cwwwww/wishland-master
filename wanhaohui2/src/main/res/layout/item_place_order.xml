<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_draw_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="08-20"
                    android:textColor="@color/text_color2" />

                <TextView
                    android:id="@+id/tv_draw_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_draw_date"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="14:03"
                    android:textColor="@color/text_color2" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_draw_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招商银行"
                    android:textColor="@color/text_color1" />

                <TextView
                    android:id="@+id/tv_draw_bank_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_draw_bank"
                    android:layout_marginTop="5dp"
                    android:text="**88" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_xiazhu_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_draw_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下注金额："
                        android:textColor="@color/text_color2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_xiazhu_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textColor="@color/text_color1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/ll_xiazhu_money">
                    <TextView
                        android:id="@+id/tv_draw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="派彩金额："
                        android:textSize="16sp"
                        android:textColor="@color/text_color2" />

                    <TextView
                        android:id="@+id/tv_caijin_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textColor="@color/view_green"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_draw_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="沙巴智能版"
                android:textSize="16sp"
                android:textColor="@color/text_color1" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@color/view_gray" />

</RelativeLayout>