<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_find_phone"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/icon_deposit_bg_select"
                android:drawableTop="@drawable/find_phone"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="短信找回"
                android:textColor="@color/text_color3" />

            <Button
                android:id="@+id/bt_find_phone_dis"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/icon_deposit_bg_disselect"
                android:drawableTop="@drawable/find_phone"
                android:paddingTop="10dp"
                android:text="短信找回"
                android:textColor="@color/text_color1"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_find_email"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/icon_deposit_bg_select"
                android:drawableTop="@drawable/find_email"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="邮箱找回"
                android:textColor="@color/text_color3"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_find_email_dis"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/icon_deposit_bg_disselect"
                android:drawableTop="@drawable/find_email"
                android:paddingTop="10dp"
                android:text="邮箱找回"
                android:textColor="@color/text_color1" />

            <Button
                android:id="@+id/bt_find_custom_dis"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/icon_deposit_bg_disselect"
                android:drawableTop="@drawable/find_custom"
                android:paddingTop="10dp"
                android:text="客服找回"
                android:textColor="@color/text_color1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="25px"
                        android:hint="请输入您绑定的手机号码"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40px"
                    android:background="@color/text_color4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_phone_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_weight="5"
                        android:background="@null"
                        android:drawableLeft="@drawable/icon_protect"
                        android:drawablePadding="25px"
                        android:hint="请输入手机验证码"
                        android:maxLength="21"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_get_code1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_weight="2"
                        android:background="@drawable/bg_verify_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="获取验证码"
                        android:textColor="@color/blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_message"
                        android:drawablePadding="25px"
                        android:hint="请输入您绑定的电子邮箱"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40px"
                    android:background="@color/text_color4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_email_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_weight="5"
                        android:background="@null"
                        android:drawableLeft="@drawable/icon_protect"
                        android:drawablePadding="25px"
                        android:hint="请输入邮箱验证码"
                        android:maxLength="21"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_get_code2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_weight="2"
                        android:background="@drawable/bg_verify_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="获取验证码"
                        android:textColor="@color/blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_email_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="验证码已发送到您邮箱，15分钟内有效，请勿泄露"
            android:textColor="@color/color_red"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_submit"
            android:text="验证"
            android:textColor="@color/white"
            android:textSize="30px" />

    </LinearLayout>

    <com.wishland.www.wanhaohui2.view.customlayout.EmptyLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>